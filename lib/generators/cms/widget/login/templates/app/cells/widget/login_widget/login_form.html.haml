.row-fluid
  .span12
    = cms_tag(:h1, @widget, :headline)

    = cms_tag(:div, @widget, :content)

    %form{ action: cms_path(@page.homepage.login_page), method: :post }
      %input{ type: 'hidden', name: 'return_to', value: cms_path(@page) }

      .control-group
        %label
          = t('widgets.login_widget.form.login')
        %input{ type: 'text', name: 'login_presenter[login]' }

      .control-group
        %label
          = t('widgets.login_widget.form.password')
        %input{ type: 'password', name: 'login_presenter[password]' }

      .control-group
        %input.btn{ type: 'submit', name: 'submit', value: t('widgets.login_widget.form.submit') }

    = link_to(cms_path(@page.homepage.login_page.reset_password_page)) do
      = t('widgets.login_widget.reset_password')
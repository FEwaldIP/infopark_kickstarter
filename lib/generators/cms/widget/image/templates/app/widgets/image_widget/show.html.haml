.box.box_image.well
  - if @widget.source.present?
    - if @widget.link_to.present?
      = link_to(cms_path(@widget.link_to)) do
        = cms_image_tag(@widget.source)
    - else
      = cms_image_tag(@widget.source)
  = cms_tag(:h3, @widget, :title)

  %p.caption
    = cms_tag(:div, @widget, :caption)

= cms_tag(:h1, @obj, :title)

= cms_tag(:div, @obj, :body)

= simple_form_for(@presenter, url: cms_path(@obj), html: { class: 'form-horizontal' }) do |form|
  = form.error_notification

  %fieldset
    %legend
      = t('.user_legend')

    = form.input(:gender, as: :radio, collection: [:M, :F])

    = form.input(:first_name)

    = form.input(:last_name)

    = form.input(:language, as: :select, collection: [:de, :en])

    = form.input(:email)

    = form.input(:postalcode)

    = form.input(:city)

    = form.input(:street_address)

    = form.input(:phone)

    = form.input(:mobile_phone)

    = form.input(:country, alias_method: :localized_country_select)

    = form.input(:want_email, as: :boolean, inline_label: true, label: false)

  %fieldset
    %legend
      = t('.company_legend')

    = form.input(:company)

    = form.input(:job_title)

  .control-group
    .controls
      = form.button(:submit, class: 'btn-primary')
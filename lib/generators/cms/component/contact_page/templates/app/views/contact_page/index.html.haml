.col-md-12
  = cms_tag(:h1, @obj, :headline)

  = cms_tag(:div, @obj, :content)

.col-md-5
  = form_for(@contact_page_presenter, url: cms_path(@obj)) do |form|
    %fieldset
      .form-group
        = form.label(:email)

        = form.email_field(:email, class: 'form-control', required: true)

      .form-group
        = form.label(:subject)

        = form.text_field(:subject, class: 'form-control', required: true)

      .form-group
        = form.label(:message)

        = form.text_area(:message, class: 'form-control', rows: 10)

      = form.submit(class: 'btn btn-default')

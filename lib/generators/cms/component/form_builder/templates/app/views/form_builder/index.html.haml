.row
  .col-md-12
    = cms_tag(:h1, @obj, :headline)

.row
  .col-md-5
    = form_for(@presenter, url: cms_path(@obj)) do |form|
      %fieldset
        = form.hidden_field(:id, value: @presenter.id)
        = form.hidden_field(:title, value: @presenter.id)
        = form.hidden_field(:state, value: @presenter.state)

        - @custom_attributes.each do |attribute|
          - type = attribute.attributes['type']
          = render("form_builder/input/#{type}", form: form, attribute: attribute)

        = form.submit('Submit', class: 'btn btn-success')

%ul.pager
  %li.previous{class: ('disabled' if index == 0)}
    = link_to(cms_path(page, page_index: index - 1)) do
      %span.glyphicon.glyphicon-chevron-left

      Newer posts

  %li.next
    = link_to(cms_path(page, page_index: index + 1)) do
      Older posts

      %span.glyphicon.glyphicon-chevron-right

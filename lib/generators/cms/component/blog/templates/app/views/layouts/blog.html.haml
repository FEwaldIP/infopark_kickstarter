!!! 5
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{:'http-equiv' => 'X-UA-Compatible', content: 'IE=Edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}

    %title
      New Blog

    = csrf_meta_tags
    = rails_connector_header_tags

    / HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag('http://html5shim.googlecode.com/svn/trunk/html5.js')

    = stylesheet_link_tag('blog/base', media: 'all')

    %link{href: '/favicon.ico', rel: 'shortcut icon'}
    = auto_discovery_link_tag(:atom, atom_feed_path)
    = auto_discovery_link_tag(:rss, rss_feed_path)

  %body.blog{body_attributes}
    #fb-root
    = render_cell(:main_navigation, :show, @obj)

    .container
      .content
        .row
          .span12
            = render_cell(:flash_messages, :show, flash)
            = yield

    .container
      = render_cell(:footer, :show)

    = rails_connector_after_content_tags

    = javascript_include_tag('application')

    = render_cell(:main_navigation, :highlight, @obj)
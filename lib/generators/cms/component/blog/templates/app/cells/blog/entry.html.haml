.blog-entry
  .media
    = render(state: :gravatar)

    .media-body
      %h3.media-heading
        = link_to(cms_path(@entry)) do
          = display_field(@entry, :title)

      = render(state: :published_at)

      = render(state: :published_by)

  = render(state: :snippet)

  %p
    = link_to(cms_path(@entry)) do
      = t('blog.read_more')

    %i.icon-chevron-right
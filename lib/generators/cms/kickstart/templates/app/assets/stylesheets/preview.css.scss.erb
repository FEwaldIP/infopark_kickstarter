span.marker {
  width: 1px;
  height: 1px;
  display: block;
  position: absolute;
}

a.marker {
  background: url(<%= asset_path('edit.png') %>) no-repeat;
  display: none;
  height: 16px;
  opacity: 0.3;
  overflow: hidden;
  position: absolute;
  text-align: left;
  text-indent: -20000px;
  width: 16px;
  z-index: 11;
  &:hover {
    opacity: 1;
  }
}
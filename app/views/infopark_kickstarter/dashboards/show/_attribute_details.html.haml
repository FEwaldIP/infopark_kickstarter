%h2
  Attribute Details

  %span.badge
    = stats.attributes_count

- stats.attributes.in_groups_of(2).each do |group|
  .row-fluid
    - group.each do |item|
      - next unless item

      .span6.well.well-small
        = render('infopark_kickstarter/dashboards/show/attribute', attribute: item)

- stats.grouped_attributes.each do |type, list|
  .progress
    .bar{style: "width: #{list.size / stats.maximum_attributes * 100}%"}
      #{type}: #{list.size}
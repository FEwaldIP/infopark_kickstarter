.accordion-group
  .accordion-heading
    %a.accordion-toggle{href: "#collapse-panel-#{@widget.id}", data: {toggle: 'collapse', parent: "#accordion-#{@obj.id}"}}
      Collapse
      = @widget.title

  .accordion-body.collapse{id: "collapse-panel-#{@widget.id}"}
    .accordion-inner
      = cms_tag(:div, @widget, :content)
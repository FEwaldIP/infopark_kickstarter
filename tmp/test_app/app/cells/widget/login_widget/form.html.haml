.row
  .col-md-12
    = form_for(:login_presenter, url: cms_path(@login_page), method: :post) do |form|
      %fieldset
        = hidden_field_tag(:return_to, cms_path(@page))
        = hidden_field_tag(:authenticity_token, form_authenticity_token)

        .form-group
          = form.label(:login)

          = form.text_field(:login, class: 'form-control', required: true)

        .form-group
          = form.label(:password)

          = form.password_field(:password, class: 'form-control', required: true)

        = form.submit(class: 'btn btn-default')

    = render({ state: :reset_password })

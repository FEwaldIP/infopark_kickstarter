%ul.pager
  %li.previous{class: ('disabled' if index == 0)}
    = link_to(cms_path(page, page_index: index - 1)) do
      %span.glyphicon.glyphicon-chevron-left

      = t('blog.newer_posts')

  %li.next
    = link_to(cms_path(page, page_index: index + 1)) do
      = t('blog.older_posts')

      %span.glyphicon.glyphicon-chevron-right

.col-md-9
  = render(partial: 'post', collection: @posts)

  %ul.pager
    %li.previous{class: ('disabled' if @page == 0)}
      = link_to(cms_path(@obj, page: @page - 1)) do
        %span.glyphicon.glyphicon-chevron-left

        = t('blog.newer_posts')

    %li.next
      = link_to(cms_path(@obj, page: @page + 1)) do
        = t('blog.older_posts')

        %span.glyphicon.glyphicon-chevron-right

.col-md-3
  = render('blog/useful_links', page: @obj)

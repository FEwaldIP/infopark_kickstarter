.modal-header.clearfix
  .pull-left
    %h3
      Mediabrowser

  .pull-right
    %h3
      %button.close.mediabrowser-close
        &times;

.modal-body.clearfix
  .row-fluid.loading
    .span12
      %i.ip_icon.ip_spinning
        &#61475;

  .content
    .row-fluid
      .span12
        .pull-right
          = text_field_tag('query', @query, class: 'search')

    .row-fluid
      .span6
        %ul.pager
          - if @page > 1
            %li.previous
              %a{href: '', data: { page: @page - 1 }}
                %span.arrow
                  &lt;

          %li
            %span
              Results
              = @total

          - if @page < @maxPages
            %li.next
              %a{href: '', data: { page: @page + 1 }}
                %span.arrow
                  &gt;

        %table.table
          - @images.each do |image|
            %tr
              %td
                %a.inspect{href: '', data: { id: image.id }}
                  = cms_image_tag(image)

              %td
                = image.title || image.id

              %td
                = check_box_tag(image.id, image.id, @selected.include?(image.id), class: 'selected')

      .span6
        .inspector

.modal-footer.clearfix
  .pull-right
    %button.btn.mediabrowser-save
      Save

    %button.btn.mediabrowser-close
      Close

.modal-header.clearfix
  .pull-left
    %h3
      Mediabrowser

  .pull-right
    %h3
      %button.close.mediabrowser-close
        &times;

.modal-body.clearfix
  .row-fluid.loading
    .span12
      %i.ip_icon.ip_spinning
        &#61475;

  .content
    .row-fluid.filter
      .span12
        %ul.nav.nav-pills
          %li{class: ('active' if @obj_class == 'Image')}
            %a{href: '', data: { 'obj-class' => 'Image' }}
              Image

          %li{class: ('active' if @obj_class == 'BlogPost')}
            %a{href: '', data: { 'obj-class' => 'BlogPost' }}
              BlogPost

    .row-fluid
      .span12
        = text_field_tag('query', @query, class: 'search')

    .row-fluid
      .span6
        %ul.pager
          - if @page > 1
            %li.previous
              %a{href: '', data: { page: @page - 1 }}
                %span.arrow
                  &lt;

          %li
            %span
              Results
              = @total

          - if @page < @maxPages
            %li.next
              %a{href: '', data: { page: @page + 1 }}
                %span.arrow
                  &gt;

        %table.table.table-striped.table-hover
          - @hits.each do |hit|
            = render @obj_class.underscore, hit: hit

      .span6
        .inspector

.modal-footer.clearfix
  .pull-right
    %button.btn.mediabrowser-save
      Select

    %button.btn.mediabrowser-close
      Close

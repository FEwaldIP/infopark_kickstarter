!!! 5

%html
  %head
    %meta{charset: 'utf-8'}
    %meta{:'http-equiv' => 'X-UA-Compatible', content: 'IE=Edge,chrome=1'}
    %meta{name: 'viewport', content: 'width=device-width, initial-scale=1.0'}

    = render_cell(:title, :show, @obj)

    = csrf_meta_tags

    = rails_connector_header_tags

    / HTML5 shim, for IE6-8 support of HTML elements
    /[if lt IE 9]
      = javascript_include_tag('http://html5shim.googlecode.com/svn/trunk/html5.js')

    = stylesheet_link_tag('application', media: 'all')
    = stylesheet_link_tag('editing', media: 'all') if inplace_editing_allowed?

    %link{href: '/favicon.ico', rel: 'shortcut icon'}

    = render('blog/discovery', page: @obj)

  %body{body_attributes(@obj)}
    = render_cell(:menu_bar, :show)

    .container
      = render_cell(:main_navigation, :show, @obj)

      .content
        .row
          .col-md-12
            = render_cell(:breadcrumbs, :show, @obj)

        .row
          .col-md-12
            = render_cell(:flash, :messages, flash)

            = yield

      = render_cell(:social_sharing, :show, cms_url(@obj))

      = render_cell(:footer, :show, @obj)

    = javascript_include_tag('application')

    - if inplace_editing_allowed?
      = javascript_include_tag('editing')
      = render('layouts/user_javascript', current_user: current_user)

    = render('layouts/google_analytics', tracking_id: 'UA-XXXX-Y', anonymize: true)

    = rails_connector_after_content_tags
